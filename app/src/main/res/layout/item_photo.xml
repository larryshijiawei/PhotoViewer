<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_userIcon"
        android:adjustViewBounds="true"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name"
        android:id="@+id/tv_userName"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/iv_userIcon"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorFont"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2 hours ago"
        android:id="@+id/tv_timeStamp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/iv_photo"
        android:adjustViewBounds="true"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_below="@+id/tv_userName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/iv_likeIcon"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_like"
        android:layout_below="@+id/iv_photo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_likeCount"
        android:layout_below="@+id/iv_photo"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_likeIcon"
        android:layout_marginLeft="5dp"
        android:text="100 likes"
        android:textColor="@color/colorFont"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:id="@+id/tv_caption"
        android:layout_below="@+id/tv_likeCount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:id="@+id/tv_commenterID"
        android:layout_below="@+id/tv_caption"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="commenter"
        android:textColor="@color/colorFont"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment"
        android:layout_below="@+id/tv_caption"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_commenterID"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"
        android:text="Looks good! Looks good! Looks good! Looks good! Looks good! Looks good!"
        />

</RelativeLayout>